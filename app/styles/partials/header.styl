.header
	position absolute
	top 0
	left 218px
	padding 28px 0
	z-index 2
	height 125px

	&_banner
		padding 0
		position static
		height auto

		& .header__login
			margin 13px -4px 0 0

	&__banner
		position relative
		margin-bottom 20px
		width 100%
		height 193px
		color #fff
		background url('../images/header-banner.jpg') 0 0 no-repeat

	&__banner-title
		position absolute
		top 25px
		left 50%
		margin-left -157px
		width 380px
		font-family nautilus
		font-size 69px
		line-height 66px
		text-shadow 3px 3px #000

	&__banner-text
		position absolute
		top 35px
		right 341px
		width 170px
		font-family beausans-l
		font-size 30px
		line-height 28px
		letter-spacing 1.3px

	&__logo
		position relative
		left -41px
		width 198px
		height 69px
		display block
		background-image url('../images/logo.png')

	&__login
		margin 12px 47px 24px 0
		float right

	&__login-name
		margin-bottom 20px
		font-family beausans-th
		font-size 14px
		color #8dc63f
		letter-spacing .3px

	&__login-btn
		margin-top 5px

		& .button
			height 25px
			line-height 25px
			font-size 15px
			background-color #8dc63f

			&:hover
				background-color #73a133

	&__login-reg
		margin-top 1px

