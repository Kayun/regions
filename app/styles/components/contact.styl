.contact
	position relative
	margin 0 auto
	padding 15px 8px
	width 670px
	height 135px
	display block
	font-family beausans-l
	font-size 16px
	line-height inherit
	color #000
	background-color $trn
	border 2px solid $trn
	border-radius 5px
	transition border-color .3s ease
	user-select text

	&:disabled
		color #adadad

		&:hover
			border-color $trn

			&:before
				display block

		.link
		.contact__phone
			color #adadad
			cursor default

		.contact__phone
			text-decoration none

	&:before
		position absolute
		bottom -3px
		left 8px
		width 650px
		height 1px
		content ''
		background-color #d7d7d7

	&:hover
	&_state_active
		border-color $bg-green

		.contact__edit
		.contact__del
			opacity 1

		&:before
			display none

	&:last-child

		&:before
			display none

	&__item
		text-align left
		padding 2px 0

	&__phone
		color #000
		text-decoration none

		&:hover
			text-decoration underline

	.link
		font-size 16px

	&__edit
	&__del
		opacity 0
		position absolute
		bottom 10px
		transition opacity .3s ease

	&__edit
		right 170px

	&__del
		right 10px
