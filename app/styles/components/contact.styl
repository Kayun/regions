.contact
	position relative
	margin 0 auto
	padding 15px 8px
	width 670px
	height 135px
	font-family beausans-l
	font-size 16px
	color #000
	border 2px solid $trn
	border-radius 5px
	transition border-color .3s ease

	&:hover
		border-color $bg-green

		.contact__edit
		.contact__del
			opacity 1

	&__item
		padding 2px 0

	&__phone
		color #000
		text-decoration none

		&:hover
			text-decoration underline

	.link
		font-size 16px

	&__edit
	&__del
		opacity 0
		position absolute
		bottom 10px
		transition opacity .3s ease

	&__edit
		right 170px

	&__del
		right 10px
