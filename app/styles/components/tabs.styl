.tab
	width 100%
	height 40px
	display: block;
	font-family beausans-l
	font-size 0

	&__item
		padding 0px 16px
		height 100%
		display inline-block
		font-size 12px
		line-height 40px
		color $blue
		text-align center
		border-radius 5px 5px 0 0
		background-color #fff

		&.ionTabs__tab_state_active
			background-color $bg-green
			color #fff

.ionTabs__item_state_active

	&:first-child
		border-radius 0 6px 6px 6px

