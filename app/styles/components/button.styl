.button
	padding 0 17px
	height 38px
	min-width 150px
	display inline-block
	font-family beausans-l
	line-height 38px
	font-size 18px
	color #fff
	text-align center
	border none
	border-radius 5px
	background-color #25aae1
	transition background-color .3s ease
	cursor pointer

	&:hover
		background-color #1e8bba

	& + .button
		margin-left 10px

	&_state_disabled
		background-color #949494

		&:hover
			background-color #949494

	&_type

		&_add
			position relative
			padding 0
			min-width 40px
			width 40px
			height 40px
			line-height 40px

			&:before
				position absolute
				top 50%
				left 50%
				margin-top -1px
				margin-left -12px
				width 24px
				height 3px
				content ''
				background-color #fff

			&:after
				position absolute
				top 50%
				left 50%
				margin-top -12px
				margin-left -1px
				width 3px
				height 24px
				content ''
				background-color #fff

		&_icon
			position relative
			padding 0
			min-width 34px
			width 34px
			height 24px
			line-height 24px
			border-radius 2px

			&-home

				&:before
					position absolute
					top 10px
					left 50%
					margin-left -5px
					width 10px
					height 10px
					content ''
					border 2px solid #fff
					box-sizing border-box

				&:after
					position absolute
					top 6px
					left 50%
					margin-left -4px
					width 8px
					height 8px
					content ''
					border-top 2px solid #fff
					border-left 2px solid #fff
					transform rotate(45deg)
					box-sizing border-box

			&-price

				&:before
					position absolute
					top 50%
					left 50%
					margin-top -1px
					margin-left -6px
					width 12px
					height 2px
					content ''
					background-color #fff
					box-shadow 0 4px, 0 -4px

				&:after
					position absolute
					top 7px
					left 11px
					width 2px
					height 5px
					content ''
					background-color #fff
					box-shadow 10px 4px, 5px -3px, 5px 8px

			&-add

				&:before
					position absolute
					top 50%
					left 50%
					margin-top -1px
					margin-left -6px
					width 12px
					height 2px
					content ''
					background-color #fff

				&:after
					position absolute
					top 50%
					left 50%
					margin-top -6px
					margin-left -1px
					width 2px
					height 12px
					content ''
					background-color #fff

	&_size

		&_big
			padding 0 20px
			height 50px
			line-height 50px
			font-size 25px

		&_medium
			padding 0 15px
			height 28px
			min-width 115px
			line-height 28px
			font-size 13px

		&_small
			padding 0 10px
			height 20px
			min-width 105px
			line-height 20px
			font-size 12px
			border-radius 20px

	&_color

		&_green
			background-color #39b54a

			&:hover
				background-color #2c8f39

		&_red
			background-color #f00

			&:hover
				background-color #d90000

		&_orange
			background-color #e18226

			&:hover
				background-color #ba6d20

	&_width_100p
		width 100%

	&_br_5
		border-radius 5px

.button-txt
	display inline-block
	font-family beausans-th
	font-size 14px
	color #00aeef
	border 0
	background-color transparent
	transition color .3s ease

	&:hover
		color #0094c9

	& + .button-txt
		margin-left 10px

	&_type_icon
		position relative
		padding-left 18px

		&-enter
		&-exit

			&:before
				position absolute
				top 50%
				left 0
				margin-top -1px
				width 12px
				height 2px
				content ''
				background-color #00aeef
				transition background-color .3s ease

			&:after
				position absolute
				top 4px
				width 7px
				height 7px
				content ''
				border-top 1px solid #00aeef
				transform rotate(45deg)
				transition border-color .3s ease

			&:hover

				&:before
					background-color #0094c9

				&:after
					border-color #0094c9

		&-enter

			&:after
				left 4px
				border-right 1px solid #00aeef
				transform rotate(45deg)

		&-exit

			&:after
				left 0
				border-left 1px solid #00aeef
				transform rotate(-45deg)

		&-square

			&:after
				position absolute
				top 3px
				left 1px
				width 10px
				height 9px
				content ''
				border 1px solid
				border-radius 2px

	&_color

		&_green
			color #8dc63f

			&:hover
				color #73a133

