.best-offers
	display block

	&__banner
		position relative
		margin-top 90px
		height 115px
		font-family digital-7
		font-size 31px
		color #fff
		text-align center
		text-transform uppercase
		line-height 95px
		border 10px solid #8dc63f
		background linear-gradient(120deg, #20a8e0, #20a8e0 50%, #1d699b 50%, #20a8e0)
		border-radius 10px
		box-shadow inset 5px 5px 3px rgba(0, 0, 0, .3)

		&:before
		&:after
			position absolute
			top -100px
			content ''
			sprite($chain)

		&:before
			left 22px

		&:after
			right 22px
