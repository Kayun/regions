.best-offers
	display block

	&__banner
		position relative
		margin-top 90px
		height 115px
		font-family digital-7
		font-size 31px
		color #fff
		text-align center
		text-transform uppercase
		line-height 95px
		border 10px solid #8dc63f
		background linear-gradient(120deg, #20a8e0, #20a8e0 50%, #1d699b 50%, #20a8e0)
		border-radius 10px
		box-shadow inset 5px 5px 3px rgba(0, 0, 0, .3)

		&:before
		&:after
			position absolute
			top -100px
			content ''
			sprite($chain)

		&:before
			left 22px

		&:after
			right 22px

	&__table
		margin-top 3px
		margin-bottom 65px
		width 100%

	&__head-row
		border-bottom 1px solid #ababab

	&__head-cell
		padding 24px 0
		width 16.66%
		text-align left
		font-family beausans-th
		font-size 14px
		color #9c9c9c

		&_span_3
			width 49.98%
			text-align center
