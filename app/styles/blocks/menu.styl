.menu
	padding-top 8px
	width 100%
	height 40px
	display table
	font-size 0

	&__item
		margin 7px 0
		padding 0 20px
		height 26px
		width 127px
		display inline-block
		text-align center
		vertical-align top
		border-right 1px solid #8dc63f

		&:last-child
			border none

		&.ionTabs__tab_state_active
			margin 0 0 0 -1px
			padding 7px 20px
			height 40px
			width 128px
			background-color $bg-green
			border-color $trn
			border-radius 6px 6px 0 0

			&:first-child
				width 127px
				margin 0

			&:last-child
				width 131px

			& .menu__link
				color #fff

	&__link
		width 100%
		height 100%
		display inline-block
		font-family beausans-l
		font-size 12px
		line-height 14px
		color #1da5de
		transition color .3s ease
		text-decoration none

		&_lh_26
			line-height 26px

		&:hover
			color #94c83d

.search__form.ionTabs__item_state_active

	&:first-child
		border-radius 0 6px 6px 6px

	&:nth-child(6)
		border-radius 6px 0 6px 6px
