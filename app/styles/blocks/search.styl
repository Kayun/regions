.search

	&__banner
		position relative
		margin-top 38px
		margin-bottom 14px
		width 100%
		height 127px
		background url('../images/outdoor-banner.jpg') 0 0 no-repeat
		border-radius 7px

		&-count
			margin-top 16px
			margin-right 46px
			float right

		.title__h1
			padding 44px 141px 41px

		&-icon
			position absolute
			top 33px
			left 23px
			sprite($tv-big)

	&-wrap
		width 100%
		display table
		font-size 0

	&__form
		position relative
		padding 12px
		width 100%
		height 160px
		background-color $bg-green
		border-radius 6px

		&-input
			width 440px
			display inline-block
			vertical-align top

		&-region
			margin-left 8px
			width 290px
			display inline-block
			vertical-align top

		&-checkbox
			margin-top 12px
			padding 9px 4px
			height 30px
			display inline-block
			vertical-align top

			label + .chkb + label
				margin-left 30px

		&-price
			margin-top 12px
			margin-left 37px
			display inline-block
			font-family beausans-l
			color #fff

			&-wrap
				font-size 0
				display table

				> * + *
					margin-left 7px

				> *:last-child
					margin-left 8px

			> *
				font-size 14px

			.jelect
				vertical-align top

		&-btn-search
			position absolute
			right 255px
			bottom 18px
			width 255px

		&-btn-create
			position absolute
			right 12px
			bottom 18px
			width 225px

			.button
				font-size 13px


.ui-autocomplete
	position absolute
	z-index 10
	padding-bottom 20px
	max-height 162px
	overflow-y auto
	overflow-x hidden
	font-size 14px
	background-color #fff
	font-family beausans-l
	color #8dc63f
	border-radius 0 0 7px 7px
	box-shadow 6px 9px 10px rgba(0, 0, 0, .5)

.ui-menu-item
	margin 2px 20px 2px 10px
	padding 0 10px
	height 30px
	line-height 28px
	border 1px solid $trn
	border-radius 7px
	cursor pointer
	transition all .3s ease

	&:hover
		color #73a133
		border-color #73a133
