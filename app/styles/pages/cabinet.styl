.cabinet
	font-family beausans-l
	color #fff

	&__header
		position relative
		margin-bottom 26px

		&-name
		&-title
			font-size 25px
			letter-spacing .7px

		&-title
			margin-bottom 6px

		&-msg
			position relative
			margin-top 9px
			margin-left 2px
			padding-left 28px
			display inline-block
			font-size 15px
			color #fff
			letter-spacing .32px

			&:before
				position absolute
				top 0
				left 0
				content ''
				sprite($msg)

			&_size_big
				font-size 25px
				margin-top 5px

				&:before
					top 5px

		&-edit-btn
			position absolute
			top 0
			right 8px
			width 235px

			.button
				padding 0

	&__table
		width 100%
		font-family beausans-l

		thead th
			padding 1px 15px 6px
			border-bottom 1px solid $bg-green
			color #000
			text-align left

		&-row
			cursor pointer

			&:hover
			&_state_active
				background-color #cce5a8

		&-login
		&-mail
		&-data
			border-right 1px solid $bg-green

		&-login
			width 90px

		&-mail
			width 140px

		&-data
			width 80px

		&-type
			width 130px

		&-cell
			padding 6px 15px
			font-size 13px
			color #000
			text-align left
			border-right 1px solid $bg-green

			&:last-child
				border none

	&__add-btn
		position absolute
		bottom 50px
		right 298px

		&_page_seller
			bottom auto
			top 645px
			right 48px

		.button
			vertical-align middle

	&__info
		padding 11px 12px
		font-family beausans-l
		color #000

		&-title
			margin-bottom 28px
			font-size 25px

		&-item
			padding 2px 4px
			margin 4px 0px 7px -4px
			font-size 13px

			&:hover
				background-color #a6dead

		&-key
		&-value
		& .link
			font-size 13px
			display inline-block

		&-mail
			margin-bottom 7px
			font-size 13px

		&-key
			color $bg-green

		&-value

			&_color_red
				color #f00

	&__msg

		&-header
			margin 0px 17px 5px
			padding 8px 0px
			font-family beausans-l
			font-size 16px
			color #a3a3a3
			border-bottom 1px solid #bababa

		&-header-title
		&-header-autor
		&-header-text
			display inline-block

		&-header-title
			padding: 0px 68px 0 13px;

		&-header-autor
			padding-right 128px

		&-item
			position relative
			z-index 1
			margin 0 auto
			width 678px
			height 95px
			display block
			font-family beausans-r
			font-size 0
			text-align left
			background-color $trn
			border 3px solid $trn
			border-radius 10px
			transition border-color .3s ease
			cursor default

			&.msg-disabled
				cursor pointer

				*
					color #989898

			&:before
				position absolute
				z-index 1
				bottom -4px
				left 10px
				width 655px
				height 1px
				content ''
				background-color #ceffde

			&:hover
				border-color $bg-green

				.cabinet__msg-read
				.cabinet__msg-answer
				.cabinet__msg-del
					opacity 1

				&:before
					display none

			&:disabled
				color #989898

				&:hover
					border-color $trn

				.cabinet__msg-read
				.cabinet__msg-answer
				.cabinet__msg-del
					display none

			&:last-child

				&:before
					display none

		&-title
			padding-left 15px
			width 157px
			line-height 89px
			font-size 16px
			display inline-block

		&-autor
			padding-left 11px
			width 171px
			font-size 16px
			line-height 89px
			display inline-block

		&-text
			padding 29px 15px 30px
			height 100%
			width 335px
			font-size 13px
			vertical-align top
			display inline-block

		&-read
		&-answer
		&-del
			position absolute
			bottom 5px
			opacity 0
			transition opacity .3s ease

		&-read
			right 277px

		&-answer
			right 155px

		&-del
			right 33px

	&__lock
		position relative
		top -5px
		margin-left 10px
		padding 3px 9px 1px
		display inline-block
		font-family beausans-l
		font-size 14px
		color $blue
		letter-spacing .89px
		border 1px solid #f00
		border-radius 6px

	&__data-reg
		position absolute
		bottom 12px
		left 42px
		font-family beausans-l
		font-size 10px
		color #cecece
		letter-spacing .5px





