.cabinet
	font-family beausans-l
	color #fff

	&__header
		position relative
		margin-bottom 26px

		&-name
		&-title
			font-size 25px
			letter-spacing .7px

		&-title
			margin-bottom 6px

		&-msg
			position relative
			margin-top 9px
			margin-left 2px
			padding-left 28px
			display inline-block
			font-size 15px
			color #fff
			letter-spacing .32px

			&:before
				position absolute
				top 0
				left 0
				content ''
				sprite($msg)

			&_size_big
				font-size 25px
				margin-top 5px

				&:before
					top 5px

		&-edit-btn
			position absolute
			top 0
			right 8px
			width 235px

			.button
				padding 0

	&__table
		width 100%
		font-family beausans-l

		thead th
			padding 1px 15px 6px
			border-bottom 1px solid $bg-green
			color #000
			text-align left

		&-row
			cursor pointer

			&:hover
			&_state_active
				background-color #cce5a8

		&-login
		&-mail
		&-data
			border-right 1px solid $bg-green

		&-login
			width 90px

		&-mail
			width 140px

		&-data
			width 80px

		&-type
			width 130px

		&-cell
			padding 6px 15px
			font-size 13px
			color #000
			text-align left
			border-right 1px solid $bg-green

			&:last-child
				border none

	&__add-btn
		position absolute
		bottom 50px
		right 298px

		&_page_seller
			bottom auto
			top 645px
			right 48px

		.button
			vertical-align middle

	&__info
		padding 11px 12px
		font-family beausans-l
		color #000

		&-title
			margin-bottom 28px
			font-size 25px

		&-item
			padding 2px 4px
			margin 4px 0px 7px -4px
			font-size 13px

			&:hover
				background-color #a6dead

		&-key
		&-value
		& .link
			font-size 13px
			display inline-block

		&-mail
			margin-bottom 7px
			font-size 13px

		&-key
			color $bg-green

		&-value

			&_color_red
				color #f00





