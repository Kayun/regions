.new-advert

	&__title
		margin-top 12px
		font-family beausans-l
		color #fff
		font-size 25px
		letter-spacing .7px
		user-select text

		&_mb_25
			margin-bottom 25px

	&__prog
		margin-bottom 28px

		&-item
			display inline-block
			height 63px
			width 261px
			font-family beausans-l
			font-size 16px
			color $blue
			text-align center
			line-height 63px
			background url('../images/progress.png') 0 0 no-repeat
			cursor pointer

			&:nth-child(2)
			&:nth-child(3)
				margin-left -14px

			&_state_active
				color #fff
				background-image url('../images/progress-active.png')

	&__calendar-icon
		position absolute
		top 4px
		right 5px
		width 26px
		height 22px
		border 1px solid #8dc63f
		border-radius 5px

		&:before
			position absolute
			top 2px
			left 3px
			width 1px
			height 15px
			content ''
			background-color #8dc63f
			box-shadow 5px 0 #8dc63f, 12px 0 #8dc63f, 17px 0 #8dc63f

		&:after
			position absolute
			top 2px
			left 3px
			width 17px
			height 1px
			content ''
			background-color #8dc63f
			box-shadow 0 5px #8dc63f, 0 10px #8dc63f, 0 15px #8dc63f

	&__contact
	/.new-advert__obj
		margin-top 22px
		font-family beausans-l
		font-size 14px

		&-item
		/.new-advert__obj-item
			margin-bottom 23px

			&:last-child
				margin 0

		&-title
		/.new-advert__obj-title
			width 215px
			display inline-block
			color #fff
			vertical-align top

		&-input
		/.new-advert__obj-input
			position relative
			width 470px
			display inline-block

		&-btn
		&-back-btn
			width 170px
			margin-top 23px
			margin-bottom 7px
			margin-right 2px
			overflow hidden
			float right

		&-back-btn
			margin-right 20px

		&-add-btn
			position absolute
			right 47px
			bottom 115px

			.button
				vertical-align top

	&__new-btn
		overflow hidden

		.button
			width 280px
			float right

	&__templ

		&-select
		&-new
			width 280px

		&-select
			margin-bottom 20px

		&-create
			margin 35px 0px 15px
			overflow hidden

			.button
				width 280px
				float right

		&-header
			padding-bottom 6px
			border-bottom 1px solid $bg-green

		&-header-title
		&-header-discr
			display inline-block
			font-family beausans-l
			font-size 12px
			color #adadad

		&-header-title
			padding-left 23px
			padding-right 122px

		&-item
			width 100%
			height 62px
			font-family beausans-l
			font-size 16px
			color #000
			border-bottom 1px solid $bg-green
			cursor pointer
			transition background-color .3s ease

			&:hover
			&_state_active
				background-color #cce5a8

			&:last-child
				border none

		&-text
			display inline-block

		&-title
			width 200px
			padding-left 22px
			display inline-block
			line-height 61px

	&__obj

		&-check
			position relative
			margin-bottom 21px

			&:last-child
				margin 0

		&-slider
			margin-left 217px
			padding-top 6px
			width 452px
			height 139px

		&-wrap
			position relative

		&-slide
			position relative
			height 133px
			width 133px
			transform-origin 50% 50%
			transform scale(1)
			transition transform .5s ease
			will-change transform

			&_state_close
				transform scale(0)

		&-img
			height 100%
			overflow hidden
			border-radius 5px

		&-close
			position absolute
			top -5px
			right -7px
			width 6px
			height 6px
			cursor pointer
			opacity 1
			transition opacity .3s ease

			&_state_hide
				opacity 0

			&:before
			&:after
				position absolute
				top 2px
				left -1px
				width 8px
				height 1px
				content ''
				background-color #fff

			&:before
				transform rotate(45deg)

			&:after
				transform rotate(-45deg)

		&-right
		&-left
			position absolute
			top 58px
			width 18px
			height 18px
			border-top 1px solid #fff
			border-right 1px solid #fff
			cursor pointer

		/.swiper-button-disabled
			display none

		&-right
			right 6px
			transform rotate(45deg)

		&-left
			left 193px
			transform rotate(-135deg)

		&-photo
			position absolute
			bottom 200px
			left 35px
			width 170px

		&-btn
			margin-top 27px
			margin-bottom 6px
			overflow hidden

			.button
				width 170px
				float right

		&-info
			position absolute
			top 5px
			right -25px
			width 20px
			height @width
			color #fff
			font-size 12px
			line-height @height
			text-align center
			border-radius 50%
			border 1px solid #fff
			cursor pointer

		&-popup
			position absolute
			z-index 100
			top 40px
			right -25px
			padding 15px 30px 15px 15px
			width 400px
			display none
			color #8dc63f
			background-color #fff
			border-radius 7px 0 7px 7px
			box-shadow 6px 8px 10px rgba(0, 0, 0, .5), 0 0 5px rgba(0,0,0,.5)

			&:before
				position absolute
				top -10px
				right 0
				content ''
				border-right ($w = 10px) solid $trn
				border-left $w solid $trn
				border-bottom $w solid #fff

		&-popup-close
			position absolute
			top 10px
			right 5px
			width 16px
			height @width
			cursor pointer

			&:before
			&:after
				position absolute
				top 7px
				left -2px
				width 20px
				height 1px
				content ''
				background-color $bg-green

			&:before
				transform rotate(45deg)

			&:after
				transform rotate(-45deg)



