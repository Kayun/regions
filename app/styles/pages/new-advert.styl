.new-advert

	&__title
		margin-top 12px
		font-family beausans-l
		color #fff
		font-size 25px
		letter-spacing .7px
		user-select text

		&_mb_25
			margin-bottom 25px

	&__prog
		margin-bottom 28px

		&-item
			display inline-block
			height 63px
			width 261px
			font-family beausans-l
			font-size 16px
			color $blue
			text-align center
			line-height 63px
			background url('../images/progress.png') 0 0 no-repeat

			&:nth-child(2)
			&:nth-child(3)
				margin-left -14px

			&_state_active
				color #fff
				background-image url('../images/progress-active.png')

	&__contact
		margin-top 22px
		font-family beausans-l
		font-size 14px

		&-item
			margin-bottom 23px

			&:last-child
				margin 0

		&-title
			width 215px
			display inline-block
			color #fff
			vertical-align top

		&-input
			width 472px
			display inline-block

		&-btn
			width 170px
			margin-top 23px
			margin-bottom 7px
			overflow hidden
			float right

		&-add-btn
			position absolute
			right 47px
			bottom 115px

			.button
				vertical-align top

	&__new-btn
		overflow hidden

		.button
			width 280px
			float right

	&__templ

		&-select
		&-new
			width 280px

		&-select
			margin-bottom 20px

		&-create
			margin 35px 0px 15px
			overflow hidden

			.button
				width 280px
				float right

		&-header
			padding-bottom 6px
			border-bottom 1px solid $bg-green

		&-header-title
		&-header-discr
			display inline-block
			font-family beausans-l
			font-size 12px
			color #adadad

		&-header-title
			padding-left 23px
			padding-right 122px

		&-item
			width 100%
			height 62px
			font-family beausans-l
			font-size 16px
			color #000
			border-bottom 1px solid $bg-green

			&:last-child
				border none

		&-text
			display inline-block

		&-title
			width 200px
			padding-left 22px
			display inline-block
			line-height 61px
