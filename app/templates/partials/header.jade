header.header(class= headerBanner ? "header_banner" : "" role="banner")

	- if (headerBanner)
		.header__banner
			.header__banner-title(class= headerSearch ? "header__banner-title_page_outdoor" : "")
				| Лучшее предложение

			.header__banner-text(class= headerSearch ? "header__banner-text_page_outdoor" : "")
				| Рекламный блок

	.wrapper

		.header__login

			- if (headerBanner)
				.header__login-name Василий Табуреткин

				.header__login-cabinet
					button.button-txt.button-txt_type_icon.button-txt_type_icon-square(type="button") Личный кабинет

				.header__login-exit
					button.button-txt.button-txt_type_icon.button-txt_type_icon-exit(type="button") Выйти

				.header__login-btn(class= headerSearch ? "header__login-btn_state_hide" : "")
					button.button.button_size_medium.button_width_100p(type="button") создать

			- else
				.header__login-enter
					button.button-txt.button-txt_type_icon.button-txt_type_icon-enter(type="button") Войти

				.header__login-reg
					button.button-txt.button-txt_color_green.button-txt_type_icon.button-txt_type_icon-square(type="button") Регистрация

		a.header__logo(href=jv0)
